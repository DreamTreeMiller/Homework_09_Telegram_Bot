<Window x:Class="Homework_09.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework_09"
        mc:Ignorable="d"
        Title="File Bot" 
		Height="450" MinHeight="450"
		Width="400" MinWidth="400"
		>
	<Grid ShowGridLines="False">
		<Grid.RowDefinitions>
			<RowDefinition Height="40"
						   MinHeight="40"
						   />
			<RowDefinition Height="4*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<TextBlock Grid.Row="0"
				   Text="Send and Receive Files Bot"
				   Margin="10, 0, 10, 5"
				   HorizontalAlignment="Left"
				   VerticalAlignment="Center"
				   FontSize="18"
				   FontWeight="Bold"
				   Foreground="CadetBlue"/>
		<ListBox x:Name="MessagesRoll" 
				 Grid.Row="1"
				 Margin="1"
				 BorderThickness="1"
				 HorizontalContentAlignment="Stretch"
				 ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
				 >
			<ListBox.ItemTemplate>
				<DataTemplate>
					<GroupBox HorizontalAlignment="Stretch"
							  Margin="3,1">
						<GroupBox.Header>
							<StackPanel Orientation="Horizontal">
								<!--
								<TextBlock Text="{Binding StringFormat=MsgId:{0}, Path = ID}" 
								   HorizontalAlignment="Left"
								   TextAlignment="Left"
								   />
								<TextBlock Text=" " />
								<TextBlock Text="{Binding StringFormat=ChtId:{0} , Path = ChatID}" 
								   HorizontalAlignment="Left"
								   TextAlignment="Left"
								   />
								<TextBlock Text=" " />
								-->
								<TextBlock Text="{Binding FromTo}" 
								   HorizontalAlignment="Left"
								   TextAlignment="Left"
								   />
								<!--
								<TextBlock Text=" " />
								<TextBlock Text="{Binding StringFormat=Fn:{0} , Path = FirstName}" 
								   HorizontalAlignment="Left"
								   TextAlignment="Left"
								   />
								-->
							</StackPanel>
						</GroupBox.Header>
						<StackPanel>
						<TextBlock Text="{Binding Text}" 
								   FontSize="16"
								   HorizontalAlignment="Stretch"
								   TextAlignment="Left"
								   TextWrapping="Wrap"
								   />
						<TextBlock Text="{Binding StringFormat={}{0:HH:mm}, Path = MessageDT}" 
								   HorizontalAlignment="Right"
								   TextAlignment="Center"
								   />
						</StackPanel>
					</GroupBox>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
		<Grid Grid.Row="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="70"
								  MinWidth="70" 
								  />
				<ColumnDefinition Width="*"
								  />
				<ColumnDefinition Width="70"
								  MinWidth="70" 
								  />
			</Grid.ColumnDefinitions>
			<Button x:Name="SendFileButton"
					Grid.Column="0"
					Margin="10,10, 10, 10"
					Height="50"
					Width="50"
					HorizontalAlignment="Left"
					VerticalAlignment="Center"
					>
				<Button.Style>
					<Style TargetType="{x:Type Button}">
						<Setter Property="Background" Value="Transparent"/>
						<Setter Property="Template">
							<Setter.Value>
								<ControlTemplate TargetType="{x:Type Button}">
									<Border Background="{TemplateBinding Background}">
										<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
									</Border>
								</ControlTemplate>
							</Setter.Value>
						</Setter>
						<Style.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Background" Value="LightCyan"/>
							</Trigger>
						</Style.Triggers>
					</Style>
				</Button.Style>
				<Button.Resources>
					<Style TargetType="Border">
						<Setter Property="CornerRadius" Value="25"/>
					</Style>
				</Button.Resources>
				<!---->
				<Image x:Name="SendFileIcon"
					   Height="30"
					   Width="30"
					   HorizontalAlignment="Center"
					   VerticalAlignment="Center">
				</Image>
				<!---->
				<!--
				<TextBlock Foreground="CadetBlue"
						   FontWeight="Bold"
						   FontSize="15"
						   TextWrapping="Wrap"
						   TextAlignment="Center"
						   >
					Send File
				</TextBlock>
				-->

			</Button>
			<GroupBox x:Name="TextInputBox"
					  Grid.Column="1"
					  Margin="0,0,0,5"
					  VerticalAlignment="Stretch"
					  HorizontalAlignment="Stretch"
					  >
				<GroupBox.Header>
					<StackPanel Orientation="Horizontal">
						<TextBlock Text="Сообщение для " />
						<TextBlock x:Name="FocusContact" 
								   Text="{Binding ElementName=MessagesRoll, Path=SelectedItem.UserName}"
								   />
						<TextBlock x:Name="ContactID"
								   Text="{Binding ElementName=MessagesRoll, Path=SelectedItem.ChatID}"
								   Visibility="Collapsed"
								   />
					</StackPanel>
				</GroupBox.Header>
				<TextBox x:Name="InputMessaageField"
						 Margin="0,7"
						 MinWidth="230"
						 HorizontalContentAlignment="Left"
						 TextWrapping="Wrap"
						 BorderThickness="0" 
						 KeyDown="InputMessaageField_KeyDown" 
						 />
			</GroupBox>	
			<Button x:Name="SendMessageButton"
					Grid.Column="2"
					Margin="10,10, 10, 10"
					Height="50"
					Width="50"
					HorizontalAlignment="Left"
					VerticalAlignment="Center" 
					Click="SendMessageButton_Click"
					>
				<Button.Style>
					<Style TargetType="{x:Type Button}">
						<Setter Property="Background" Value="Transparent"/>
						<Setter Property="Template">
							<Setter.Value>
								<ControlTemplate TargetType="{x:Type Button}">
									<Border Background="{TemplateBinding Background}">
										<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
									</Border>
								</ControlTemplate>
							</Setter.Value>
						</Setter>
						<Style.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Background" Value="LightCyan"/>
							</Trigger>
						</Style.Triggers>
					</Style>
				</Button.Style>
				<Button.Resources>
					<Style TargetType="Border">
						<Setter Property="CornerRadius" Value="25"/>
					</Style>
				</Button.Resources>
				<!---->
				<Image x:Name="SendMessageIcon"
					   Height="30"
					   Width="30"
					   HorizontalAlignment="Center"
					   VerticalAlignment="Center">
				</Image>
				<!---->
				<!--
				<TextBlock Foreground="CadetBlue"
						   FontWeight="Bold"
						   FontSize="12"
						   TextWrapping="Wrap"
						   TextAlignment="Center"
						   >
					Send Message
				</TextBlock>
				-->
			</Button>
		</Grid>
	</Grid>
</Window>
